<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="SuiteAutomatizacion" parallel="methods" thread-count="3">
    
    <parameter name="browser" value="chrome"/>
    <parameter name="headless" value="false"/>
    
    <test name="PruebasLogin" group-by-instances="true">
        <groups>
            <run>
                <include name="smoke"/>
                <include name="regression"/>
                <include name="login"/>
            </run>
        </groups>
        <classes>
            <class name="com.automatizacion.proyecto.pruebas.PruebasLogin"/>
        </classes>
    </test>
    
    <test name="PruebasRegistro" group-by-instances="true">
        <groups>
            <run>
                <include name="smoke"/>
                <include name="regression"/>
                <include name="registro"/>
            </run>
        </groups>
        <classes>
            <class name="com.automatizacion.proyecto.pruebas.PruebasRegistro"/>
        </classes>
    </test>
    
</suite>